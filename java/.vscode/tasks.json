{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  // Variables: https://code.visualstudio.com/docs/editor/variables-reference
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mvn verify",
      "type": "shell",
      "command": "mvn -B verify",
      "group": "build"
    },
    {
      "label": "mvn test",
      "type": "shell",
      "command": "mvn ${config:mvn_skip_doc} --batch-mode test",
      "group": "test"
    },
    {
      "label": "mvn coverage",
      "type": "shell",
      "command": "mvn --define 'doxygen.skip=true' --batch-mode test",
      "group": "test"
    },
    {
      "label": "mvn test current file",
      "type": "shell",
      "command": "mvn test ${config:mvn_skip_doc} --define 'test=${fileBasenameNoExtension}' --define 'trimStackTrace=false'",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "mvn coverage current file",
      "type": "shell",
      "command": "mvn test --define 'test=${fileBasenameNoExtension}' --define 'doxygen.skip=true' && ${workspaceFolder}/pre_commit_hooks/generate_jacoco_report.sh",
      "group": "test"
    }
  ]
}
