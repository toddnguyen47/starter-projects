{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-html",
        "eslint-plugin-import"
    ],
    "rules": {
        // Common rules
        "curly": ["error", "all"],
        "import/extensions": ["error", "never", {"js": "always"}],
        "max-len" : ["error", { "code": 120 }],
        "no-continue": ["off"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": ["off", { "allowAfterThis": true, "enforceInMethodNames": true }],
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-restricted-syntax": ["error", "ForInStatement", "WithStatement", "BinaryExpression[operator='in']"],
        "object-curly-spacing": ["error", "never"],
        "quotes": ["error", "single"]
        // Rules for specific projects
    }
}
